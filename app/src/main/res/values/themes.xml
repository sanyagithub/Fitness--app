<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Custom theme applied to application or activity
    <style name="OrangeActionBarTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/OrangeActionBar</item>
    </style>

    <!- Orang action bar style
    <style name="OrangeActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/actionbar_background</item>
        <item name="android:titleTextStyle">@style/OrangeActionBarTitleText</item>
    </style>

    <!- ActionBar title text
    <style name="OrangeActionBarTitleText" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/actionbar_text</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    -->

</resources>